{
  "id": "postgres-jira",
  "cpus": 0.5,
  "mem": 1024,
  "instances": 1,
  "container": {
    "type": "DOCKER",
    "volumes": [{
      "containerPath": "/var/lib/postgresql/data",
      "hostPath": "/mnt/disks/jira/postgres",
      "mode": "RW"
    }],
    "docker": {
      "image": "blacklabelops/postgres:9.5.4-r0",
      "network": "BRIDGE",
      "portMappings": [
        {
          "containerPort": 5432,
          "servicePort": 10102,
          "protocol": "tcp",
          "labels": {
            "VIP_0": "/postgres-jira:5432"
          }
        }
      ]
    }
  },
  "env": {
    "POSTGRES_USER": "jira",
    "POSTGRES_DB": "db",
    "POSTGRES_PASSWORD": "#talksurvey",
    "POSTGRES_ENCODING": "UNICODE",
    "POSTGRES_COLLATE": "C",
    "POSTGRES_COLLATE_TYPE": "C"
  },
  "healthChecks": [
    {
      "protocol": "TCP",
      "portIndex": 0,
      "gracePeriodSeconds": 300,
      "intervalSeconds": 60,
      "timeoutSeconds": 20,
      "maxConsecutiveFailures": 3,
      "ignoreHttp1xx": false
    }
  ],
  "constraints": [["hostname", "CLUSTER", "192.168.5.5"]],
  "upgradeStrategy": {
    "maximumOverCapacity": 0,
    "minimumHealthCapacity": 0
  }
}
